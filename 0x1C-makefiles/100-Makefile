# Makefile for school

# Compiler and flags
CC = gcc
# Source and object files
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
# Executable name
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

# Phony targets
.PHONY: all clean oclean fclean re

# Default target: builds the executable
all: $(NAME)

# Rule to build the executable
$(NAME):m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Clean rules
clean:
    $(RM) *~
    $(RM) $(NAME)

oclean:
    $(RM) $(OBJ)

fclean: clean oclean

# Force recompilation of all source files
re: fclean all

