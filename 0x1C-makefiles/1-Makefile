# Makefile for "school" executable

# Compiler and compiler flags
CC ?= gcc
CFLAGS =

# Source files
SRC = main.c school.c

# Object files
OBJ = $(SRC:.c=.o)

# Target executable
TARGET = school

# Rule to build the executable
all: $(TARGET)

$(TARGET): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $(OBJ)

# Clean rule to remove object files and the executable
clean:
	rm -f $(OBJ) $(TARGET)
